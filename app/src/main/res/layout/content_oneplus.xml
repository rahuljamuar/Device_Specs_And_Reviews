<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jamm.devicespecsandreviews.Oneplus"
    tools:showIn="@layout/activity_oneplus">

    <TextView
        android:id="@+id/oneplusHeadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/choose_model"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/modelSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oneplusHeadingText"
        android:layout_centerHorizontal="true" />


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/modelPhoto"
        android:layout_below="@+id/modelSpinner"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"/>


    <!--<ImageView
        android:id="@+id/modelPhoto"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/modelSpinner"
        android:layout_centerHorizontal="true" />
-->
    <TextView
        android:id="@+id/techSpecs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/modelPhoto"
        android:layout_centerHorizontal="true"
        android:text="@string/technical_specification"
        android:textColor="@android:color/black"
        android:textSize="17sp" />




    <ScrollView
        android:id="@+id/modelDetailsScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/techSpecs"
        android:layout_marginTop="10dp"
        android:scrollbarStyle="outsideOverlay">

        <HorizontalScrollView
            android:id="@+id/modelDetailsHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/detailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/network"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/network"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />


            </RelativeLayout>


        </HorizontalScrollView>

    </ScrollView>


</RelativeLayout>
