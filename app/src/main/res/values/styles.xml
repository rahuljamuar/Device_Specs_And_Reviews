<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="techSpecsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginLeft">5dp</item>

    </style>

    <style name="techSpecsTextView.V">
        <item name="android:textColor">#2a2a8b</item>
    </style>


    <style name="thickLines">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#1230c6</item>
        <item name="android:visibility">gone</item>


    </style>

    <style name="thinLines">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0.5dp</item>
    <item name="android:background">#3f4045</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:visibility">gone</item>
    </style>

    <style name="relativeLayoutScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#badfe7</item>

    </style>

    <style name="scrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="networkImageIcon">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">135dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:visibility">gone</item>



    </style>

    <style name="subTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/specsHeader</item>
        <item name="android:textSize">22dp</item>
        <item name="android:visibility">gone</item>
    </style>



</resources>
